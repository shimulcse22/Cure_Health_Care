<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/medicine_image"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_icon_user_home"
        app:layout_constraintVertical_bias="0"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/medicine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintStart_toEndOf="@id/medicine_image"
        app:layout_constraintTop_toTopOf="@id/medicine_image"
        app:layout_constraintBottom_toTopOf="@id/medicine_company"
        tools:text="@string/title_fragment_profile"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/medicine_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintStart_toEndOf="@id/medicine_image"
        app:layout_constraintTop_toBottomOf="@id/medicine_name"
        app:layout_constraintBottom_toTopOf="@id/medicine_price"
        tools:text="@string/title_fragment_home"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/medicine_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintStart_toEndOf="@id/medicine_image"
        app:layout_constraintTop_toBottomOf="@id/medicine_company"
        app:layout_constraintBottom_toBottomOf="@id/medicine_image"
        tools:text="@string/title_fragment_profile"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/delete_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/plus_icon"
        app:srcCompat="@drawable/ic_icon_delete"
        app:layout_constraintVertical_bias="0"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/plus_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/delete_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_icon_plus"
        app:layout_constraintVertical_bias="1"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/plus_icon"
        app:layout_constraintEnd_toStartOf="@id/plus_icon"
        app:layout_constraintTop_toTopOf="@id/plus_icon"
        android:layout_marginEnd="@dimen/_8sdp"
        tools:text="100" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/minus_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@id/plus_icon"
        app:layout_constraintEnd_toStartOf="@id/number_title"
        app:layout_constraintTop_toTopOf="@id/plus_icon"
        app:srcCompat="@drawable/ic_icon_minus" />

</androidx.constraintlayout.widget.ConstraintLayout>