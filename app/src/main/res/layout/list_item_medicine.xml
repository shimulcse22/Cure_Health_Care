<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="String" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_3sdp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        app:cardElevation="@dimen/_5sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/medicine_image"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/ic_icon_user_home" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/medicine_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                app:layout_constraintStart_toEndOf="@id/medicine_image"
                app:layout_constraintEnd_toStartOf="@id/delete_icon"
                app:layout_constraintTop_toTopOf="@id/medicine_image"
                app:layout_constraintBottom_toTopOf="@id/medicine_company"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/black"
                tools:text="kjhdfsakjfhsakjhfaskjfhskfhsdakljhhfdhjadsg"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/medicine_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toEndOf="@id/medicine_image"
                app:layout_constraintTop_toBottomOf="@id/medicine_name"
                app:layout_constraintBottom_toTopOf="@id/medicine_price"
                android:textColor="@color/black"
                tools:text="@string/title_fragment_home" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/medicine_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toEndOf="@id/medicine_image"
                app:layout_constraintTop_toBottomOf="@id/medicine_company"
                app:layout_constraintBottom_toBottomOf="@id/medicine_image"
                android:textStyle="normal"
                android:textColor="@color/text_blue"
                tools:text="@string/title_fragment_profile" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/mrp_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toEndOf="@id/medicine_price"
                app:layout_constraintTop_toTopOf="@id/medicine_price"
                app:layout_constraintBottom_toBottomOf="@id/medicine_price"
                android:textStyle="normal"
                android:textColor="@color/black"
                tools:text="@string/title_fragment_profile" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/discount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toEndOf="@id/mrp_price"
                app:layout_constraintTop_toTopOf="@id/medicine_price"
                app:layout_constraintBottom_toBottomOf="@id/medicine_price"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:background="@drawable/text_purple_background"
                tools:text="@string/title_fragment_profile" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/preorder_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textSize="@dimen/_11ssp"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@id/medicine_image"
                app:layout_constraintTop_toBottomOf="@id/medicine_price"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textStyle="normal"
                android:background="@drawable/text_preoder"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                tools:text="@string/title_fragment_profile" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toEndOf="@id/preorder_text"
                app:layout_constraintTop_toBottomOf="@id/medicine_price"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textStyle="normal"
                android:visibility="visible"
                android:background="@drawable/date_text_color_bg"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                tools:text="@string/title_fragment_profile" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/delete_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/plus_icon"
                android:visibility="invisible"
                app:srcCompat="@drawable/delete"
                app:layout_constraintVertical_bias="0" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/plus_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/plus_icon_background"
                android:text="@string/plus"
                app:layout_constraintVertical_bias="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/number_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/plus_icon"
                app:layout_constraintEnd_toStartOf="@id/plus_icon"
                app:layout_constraintTop_toTopOf="@id/plus_icon"
                android:layout_marginEnd="@dimen/_8sdp"
                android:text="@{data}"
                tools:text="100" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/minus_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                app:layout_constraintBottom_toBottomOf="@id/plus_icon"
                app:layout_constraintEnd_toStartOf="@id/number_title"
                app:layout_constraintTop_toTopOf="@id/plus_icon"
                android:text="@string/minus"
                android:textSize="@dimen/_14ssp"
                android:paddingStart="@dimen/_6sdp"
                android:paddingEnd="@dimen/_6sdp"
                android:textStyle="bold"
                android:background="@drawable/plus_icon_background"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>