<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cure_health_care_nav_host.xml"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.devshawon.curehealthcare.ui.fragments.home.HomeFragment"
        android:label=""
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_filter_fragment"
            app:destination="@id/filter_fragment" />
        <action
            android:id="@+id/action_home_to_search_fragment"
            app:destination="@id/search_fragment" />
        <action
            android:id="@+id/action_home_to_notification_fragment"
            app:destination="@id/notification_fragment" />
    </fragment>

    <fragment
        android:id="@+id/trendingFragment"
        android:name="com.devshawon.curehealthcare.ui.fragments.trending.TrendingFragment"
        android:label=""
        tools:layout="@layout/fragment_trending"/>

    <fragment
        android:id="@+id/orderFragment"
        android:name="com.devshawon.curehealthcare.ui.fragments.order.OrderFragment"
        android:label=""
        tools:layout="@layout/fragment_order">
        <action
            android:id="@+id/action_order_to_single_order_fragment"
            app:destination="@id/singleOrderFragment" />
    </fragment>

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.devshawon.curehealthcare.ui.fragments.cart.CartFragment"
        android:label=""
        tools:layout="@layout/fragment_cart"/>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.devshawon.curehealthcare.ui.fragments.profile.ProfileFragment"
        android:label=""
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_profileFragment_to_chagePassword"
            app:destination="@id/chagePassword" />
    </fragment>

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.devshawon.curehealthcare.ui.fragments.profile.EditProfileFragment"
        android:label=""
        tools:layout="@layout/edit_profile_fragment"/>

    <fragment
        android:id="@+id/chagePassword"
        android:name="com.devshawon.curehealthcare.ui.fragments.profile.ChangePassword"
        android:label=""
        tools:layout="@layout/chnage_password_fragment"/>

    <fragment
        android:id="@+id/filter_fragment"
        android:name="com.devshawon.curehealthcare.ui.fragments.filter.FilterFragment"
        android:label=""
        tools:layout="@layout/filter_fragment"/>

    <fragment
        android:id="@+id/search_fragment"
        android:name="com.devshawon.curehealthcare.ui.fragments.filter.SearchFragment"
        android:label=""
        tools:layout="@layout/search_fragment"/>

    <fragment
        android:id="@+id/notification_fragment"
        android:name="com.devshawon.curehealthcare.ui.fragments.filter.NotificationFragment"
        android:label=""
        tools:layout="@layout/notification_fragment"/>

    <fragment
        android:id="@+id/singleOrderFragment"
        android:name="com.devshawon.curehealthcare.ui.fragments.order.SingleOrderFragment"
        android:label=""
        tools:layout="@layout/fragment_order_details_layout"/>

</navigation>