<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/splash_fragment">

    <fragment
        android:id="@+id/splash_fragment"
        android:name="com.devshawon.curehealthcare.ui.auth.fragments.SplashFragment"
        android:label=""
        tools:layout="@layout/splash_fragment">
        <action
            android:id="@+id/action_splash_fragment_to_registration_fragment"
            app:destination="@id/registration_fragment" />
        <action
            android:id="@+id/action_splash_fragment_to_login_fragment"
            app:destination="@id/splash_fragment" />
    </fragment>
    <fragment
        android:id="@+id/login_fragment"
        android:name="com.devshawon.curehealthcare.ui.auth.fragments.LoginFragment"
        android:label=""
        tools:layout="@layout/login_fragment_layout">
        <action
            android:id="@+id/action_login_fragment_to_registration_fragment"
            app:destination="@id/registration_fragment" />
    </fragment>

    <fragment
        android:id="@+id/registration_fragment"
        android:name="com.devshawon.curehealthcare.ui.auth.fragments.RegistrationFragment"
        android:label=""
        tools:layout="@layout/registration_fragment_layout">
        <action
            android:id="@+id/action_registration_fragment_to_login_fragment"
            app:destination="@id/login_fragment" />
    </fragment>

</navigation>